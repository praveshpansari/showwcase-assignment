{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "./dist",
        "strict": true,
        "types": [
            "jest"
        ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}